

<div id="articles" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @articles.each do |article| %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">By: <%= author(article) %></h6>
          <p class="card-text"><%= truncate(article.description, length: 200) %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= time_ago_in_words(article.created_at) %> ago</small>
          <%= link_to "Read more", article, class:"btn btn-primary btn-sm float-end" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= paginate @articles, outer_window: 3 %>
