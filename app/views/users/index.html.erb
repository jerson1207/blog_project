<div class="container">
  <h1 class="mt-5">All Users</h1>
  <div class="list-group">
    <% @users.each do |user| %>
      <a href="<%= user_path(user) %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <%= user.email %>
        <span class="badge bg-primary rounded-pill"><%= user.articles.count %> Articles</span>
      </a>
    <% end %>
  </div>
</div>
